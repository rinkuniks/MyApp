<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/salad"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#0d0dbb"
        android:text="SALAD"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/et63"
        android:text="Product Detail:- A salad consisting of grated cheese, grated carrot and a mayonnaise dressing. ... The original recipe contained: lettuce (head lettuce, watercress, chicory, and romaine), tomatoes, crisp bacon, Chicken breast, hard-cooked eggs, avocado, roquefort cheese, chives and vinaigrette."
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="#000000"
        />


</LinearLayout>